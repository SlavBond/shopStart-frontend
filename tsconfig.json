{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "baseUrl": "./",
  "paths": {
    "app/*": [".src/app/*"],
    "components/*": [".src/components/*"],
    "public/*": ["./public/*"],
    "redux/*": [".src/redux/*"],
    "testMock/*": ["./testMock/*"],
    "types/*": [".src/types/*"],
    "shared/*": [".src/shared/*"],
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
